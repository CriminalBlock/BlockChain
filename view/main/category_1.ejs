<!-- header -->
    <div class="container-fluid div_header">
        <header style="text-align: center;">
            <div class="text-center" style="width:60%; display: inline-block;">
                <!-- <a href="http://10.10.202.239:2000/main_1"> <img src="img/6cbac97c-3c82-4e86-8314-cb85b900a759.png"></a>             -->
            </div>
            <div style="text-align: right; display: inline-block; padding-top: 3%;">
            </div>
            <div class="col-lg-12" style="margin-top:1%; height:auto;">
                <div class="dropdown">      <!--카테고리-->
                    <button type="button" data-toggle="dropdown" id="btn_setting" class="category btn btn-default dropdown-toggle" style="float: left; width: 150px; background-color:  #D7B5EB; margin-left: 17%; margin-top: 5px;">                    
                        <i class="fas fa-bars"></i>
                        카테고리<span class="caret"></span></button>
                        <div class="dropdown-menu"role="menu" style="margin-left: 16.5%; margin-top: 5px; border-radius: 20px; text-align: center; background-color: rgba(255, 255, 255, 0.952);">
                            <div style="padding-top: 3px;"><i class="fas fa-bars"></i> 카테고리
                            </div>
                            
                            <div class="divider">   
                            </div>                             
                                <ul>
                                    여성의류
                                </ul> 
