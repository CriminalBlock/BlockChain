<div class="row" style="margin-top: 3%;">
    <div class="col-sm-10 text-center">
    <fieldset>
        <legend>판매등록</legend>
            <label for="category" style="font-size: 20px;">카테고리 </label>
                <select name="category" id="category" onchange="category_list(this.value)">
                    <option value="여성의류">여성의류</option>
                    <option value="남성의류">남성의류</option>
                    <option value="전자기기">전자기기</option>
                    <option value="가구">가구</option>
                    <option value="도서">도서</option>
                    <option value="스포츠_레저">스포츠_레저</option>
                </select>
          
            <label for="detail" style="font-size: 20px;">세부카테고리 </label>
                <select name="detail" id="detail">
                    <% for(var i of result){ %>
                        <option value="<%=i.여성의류%>"><%=i.여성의류%></option>
                    <% } %>
                </select>
          
              <br><br>
           <ul>
              <li class="formlist">
                <label for="title">제목 </label>
                <input type="text" size="30" name="title" placeholder="내용을 입력하세요">
              </li><br>
              <li class="formlist">
                <label for="price">가격 </label>
                <input type="number" size="30" name="price" autofocus required> ~
                <input type="number" size="30" name="price"><span> eth </span>
              </li><br>
              <li class="formlist">
                <label for="comment">내용 </label>
                <textarea name="content" cols="60" rows="10" placeholder="내용을 입력하세요"></textarea>
              </li>
            </ul>
          
          <div style="text-align: right;">
            <button type="submit" class="btn btn-default" formmethod="POST" formaction="/post_thing/temp_save">임시저장</button>
            <button type="button" class="btn btn-danger" onclick="check_all()">등록</button>
