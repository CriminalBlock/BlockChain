@font-face {
    font-family: 'BBTreeGB';
    src: url('https://cdn.jsdelivr.net/gh/projectnoonnu/noonfonts_nine_@1.1/BBTreeGB.woff') format('woff');
    font-weight: normal;
    font-style: normal;
}
.frame_of_table{
    font-family: 'BBTreeGB';
}
a{
  font-size: 30px;  
}
p{
    font-family: 'BBTreeGB';     /*동글네모*/
    margin-top: 5%;
}
     

     #header_td{
    padding-left: 5px;
    padding-right: 5px;
    border-right: 1px solid;
}

    .product_img{       /*상품이미지 위에 마우스 올렸을 때 애니메이션*/
        transform: scale(1);
        -webkit-transform: scale(1);
        -moz-transform: scale(1);
        -ms-transform: scale(1);
        -o-transform: scale(1);
        transition: all 0.3s ease-in-out;       /*0.3초동안 느리게*/
    }

    .product_img:hover{
        transform: scale(1.2);      /*1.2배 확대*/
        -webkit-transform: scale(1.2);      /*크롬*/
        -moz-transform: scale(1.2);     /*FireFox*/
        -ms-transform: scale(1.2);      /*explorer*/
        -o-transform: scale(1.2);       /*Opera*/
    }
    ul{
        font-size: 20px
    }
     li{
        list-style: none;
        font-size: 20px;
     }
     .item_title {
         font-size: 25px;
         text-overflow: ellipsis;
         overflow: hidden;
         font-family: 'BBTreeGB';
         padding-top: 5%;
         margin-left: 30px;

     }
     .item_price {
         position: relative;
         overflow: hidden;
         text-overflow: ellipsis;
         padding-bottom: 18px;
         font-family: 'BBTreeGB';
         font-size: 40px;
         margin-bottom: 5%;
         margin-left: 30px;
     }
         .item_price::before{
            content: "";
            position: absolute;
            bottom: 0;
            width: 80%;
            border-bottom: grey dotted 1px;
            margin-left: 10px;
         }
     .col4 {
         float: left;
     }
     .dropdown_content {
         display: none;
         position: absolute;
         width: 1000px;
         height: 300px;
         z-index: 100;
         border: 1px solid;
         background-color: rgb(255, 237, 213);
         left: 16%;
         top: 17%;
     }
     .dropdown:hover .dropdown_content {
         display: block;
     }
     #hidden_menu li {
         list-style: none;
        width: 25%;
        float: left;
        padding-bottom: 15px;
     }

     #backToTop .btn-link{
  position: absolute;
  right: 20px;
  margin-bottom: 2%;
  padding: 10px;
  text-decoration: none;
  /* box-sizing: border-box; */
  /* border: 0.5px solid #868e96; */
  /* border-radius: 50%; */
  page-break-after: auto;
  transition: all 0.5s ease-in-out;
}

 </style>

