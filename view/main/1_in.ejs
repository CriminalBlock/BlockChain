                                                        <%= noimg %>
                                                    <% }else{ %> 
                                                        <img src="/img/upload/<%= result[i].post_picname_front %>jpg" class="img-fluid img-responsive" id="image_name<%=i%>" width="230px" height="230px" style="max-width: 100%; height: 100%;" alt="no image">
                                                    <% } %> 
                                                </div>
                                            </div>
                                            <div class="title_section">
                                                <div class="item_title" id="title_name<%=i%>">
                                                    <% if(typeof result[i]=="undefined"){ %>
                                                        <%= noproduct %>
                                                    <% }else{ %> 
                                                        <%= result[i].post_title %> 
                                                    <% } %> 
                                                </div>
                                                <div class="item_price" id="price_name<%=i%>">
                                                    <% if(typeof result[i]=="undefined"){ %>
                                                        <%= noprice %>
                                                    <% }else{ %> 
                                                        <%= result[i].post_price_max %>ETH
                                                    <% } %> 
        
                                                </div>
                                            </div>
    
                                            </div>
    
                                    <% } %>
                                </div>
                            </div>
